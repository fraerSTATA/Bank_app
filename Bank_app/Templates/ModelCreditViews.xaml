<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Bank_app.Infrastructure.ViewModels"
                    xmlns:view="clr-namespace:Bank_app.Windows.DataTemplates">
    
    <DataTemplate DataType="{x:Type vm:CreditViewViewModel}">
        <view:CreditView DataContext="{Binding}"></view:CreditView>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:CreditRequestViewModel}">
        <view:UserRequestView DataContext="{Binding}"></view:UserRequestView>
    </DataTemplate>
</ResourceDictionary>